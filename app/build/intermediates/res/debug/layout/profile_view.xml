<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EAE9E3"
    android:weightSum="10" >
	<ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/bg" />
	<LinearLayout
	    android:id="@+id/profile_view_top_menu"
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_alignParentTop="true"
	    android:orientation="vertical"
	    android:visibility="visible" >

	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	       />

	</LinearLayout>

	<LinearLayout
	    
	    android:id="@+id/profile_view_bottom_menu"
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:layout_alignParentBottom="true"
	    android:layout_weight="1" >
        	
		<LinearLayout
		    
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_weight="1" >

		    <ToggleButton
		        android:id="@+id/profile_menu_main"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_weight="1"
		        android:background="@drawable/bottom_menu_button"
		        android:checked="true"
		        android:text=""
		        android:textColor="@color/white"
		        android:textOff=""
		        android:drawableTop="@drawable/ico_my_profile"
			    android:paddingTop="11dp"
		        android:textOn="" />

			<ToggleButton
			    android:id="@+id/profile_menu_description"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_weight="1"
			    android:background="@drawable/bottom_menu_button"
			    android:text=""
			    android:drawableTop="@drawable/ico_description"
			    android:paddingTop="11dp"
			    android:textColor="@color/white"
			    android:textOff=""
			    android:textOn="" />

			<ToggleButton
			    android:id="@+id/profile_menu_portrait"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_weight="1"
			    android:text=""
			    android:background="@drawable/bottom_menu_button"
			    android:drawableTop="@drawable/ic_action_picture"
			    android:textColor="@color/white"
			    android:paddingTop="11dp"
			    android:textOff=""
			    android:textOn="" />

			<ToggleButton
			    android:id="@+id/profile_menu_tags"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_weight="1"
			    android:background="@drawable/bottom_menu_button"
			    android:text=""
			    android:drawableTop="@drawable/ico_tag"
			    android:paddingTop="11dp"
			    android:textColor="@color/white"
			    android:textOff=""
			    android:textOn="" />

			<ToggleButton
			    android:id="@+id/profile_menu_map"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_weight="1"
			    android:background="@drawable/bottom_menu_button"
			    android:drawableTop="@drawable/ic_action_map"
			    android:paddingTop="11dp"
			    android:text=""
			    android:textColor="@color/white"
			    android:textOff=""
			    android:textOn="" />

		</LinearLayout>
	</LinearLayout>
	
	<LinearLayout
	    android:id="@+id/profile_tab_main"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_above="@id/profile_view_bottom_menu"
	    android:layout_below="@id/profile_view_top_menu"
	    android:layout_marginBottom="10dp"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_marginTop="10dp"
	    android:layout_weight="9"
	    android:orientation="vertical"
	    android:visibility="visible" >
		
	<LinearLayout
	    
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="6"
	    android:orientation="vertical" >

		<LinearLayout
		    
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:gravity="center_vertical"
		    android:orientation="vertical" >

			<EditText
			    android:id="@+id/profile_name"
			    android:layout_width="fill_parent"
			    android:layout_height="25dp"
			    android:layout_marginBottom="5dp"
			    android:layout_marginTop="10dp"
			    android:hint="@string/profile_name"
			    android:inputType="textCapSentences"
                android:lines="1"
                android:maxLines="1"
			    android:textSize="12sp" />

			<EditText
			    android:id="@+id/profile_surname"
			    android:layout_width="fill_parent"
			    android:layout_height="25dp"
			    android:layout_marginBottom="5dp"
			    android:layout_marginTop="10dp"
			    android:hint="@string/profile_surname"
			    android:inputType="textCapSentences"
                android:lines="1"
                android:maxLines="1"
			    android:textSize="12sp" />

			<EditText
			    android:id="@+id/profile_email"
			    android:layout_width="fill_parent"
			    android:layout_height="25dp"
			    android:layout_marginBottom="5dp"
			    android:layout_marginTop="10dp"
			    android:hint="@string/profile_email"
                android:lines="1"
                android:maxLines="1"
			    android:textSize="12sp" />

			<EditText
			    android:id="@+id/profile_phone"
			    android:layout_width="fill_parent"
			    android:layout_height="25dp"
			    android:layout_marginBottom="5dp"
			    android:layout_marginTop="10dp"
			    android:hint="@string/profile_phone"
                android:lines="1"
                android:maxLines="1"
			    android:textSize="12sp" />

			<EditText
			    android:id="@+id/profile_url"
			    android:layout_width="fill_parent"
			    android:layout_height="25dp"
			    android:layout_marginBottom="5dp"
			    android:layout_marginTop="10dp"
			    android:hint="@string/profile_url"
                android:lines="1"
                android:maxLines="1"
			    android:textSize="12sp" />
			<Spinner
			    android:id="@+id/profile_notification_timer"
			    android:layout_width="fill_parent"
			    android:layout_height="50dp"
			    android:layout_marginBottom="5dp"
			    android:layout_marginTop="5dp" />
			

			<Spinner
			    android:id="@+id/profile_api"
			    android:layout_width="fill_parent"
			    android:layout_height="50dp"
			    android:layout_marginBottom="5dp"
			    android:layout_marginTop="5dp"
                android:padding="1dp"
                />
	
		</LinearLayout>
		

	</LinearLayout>
	
	<LinearLayout
	    
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="2" >
        	
		<LinearLayout
		    
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:orientation="vertical" >

			<TextView
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:text="@string/visibility"
			    android:textSize="16sp"
                android:padding="1dp"
			    android:textStyle="bold" />

				<LinearLayout
			    	
			    	android:layout_width="fill_parent"
			    	android:layout_height="fill_parent"
			    	android:layout_weight="1"
			    	android:orientation="horizontal" >

					<RadioGroup
			   	 		android:id="@+id/profile_visibility"
			    		android:layout_width="fill_parent"
			    		android:layout_height="fill_parent"
			    		android:layout_weight="1"
			    		android:orientation="horizontal" >

			    		<RadioButton
			    		    android:id="@+id/profile_visibility_private"
			    		    android:layout_width="fill_parent"
			    		    android:layout_height="fill_parent"
			    		    android:layout_weight="1"
                            android:textSize="12sp"
			    		    android:text="@string/visibility_private" />

			    		<RadioButton
			    		    android:id="@+id/profile_visibility_member"
			    		    android:layout_width="fill_parent"
			    		    android:layout_height="fill_parent"
			    		    android:layout_weight="1"
                            android:textSize="12sp"
			    		    android:text="@string/visibility_members" />

			    		<RadioButton
			    		    android:id="@+id/profile_visibility_world"
			    		    android:layout_width="fill_parent"
			    		    android:layout_height="fill_parent"
			    		    android:layout_weight="1"
                            android:textSize="12sp"
			    		    android:text="@string/visibility_world" />

					</RadioGroup>
			
				</LinearLayout>

			</LinearLayout>
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
	    android:id="@+id/profile_tab_description"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_above="@id/profile_view_bottom_menu"
	    android:layout_alignParentTop="false"
	    android:layout_below="@id/profile_view_top_menu"
	    android:layout_marginBottom="20dp"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:layout_marginTop="20dp"
	    android:layout_weight="9"
	    android:orientation="vertical"
	    android:visibility="gone" >
		
	    <LinearLayout
	    
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="8"
	    android:orientation="vertical" >

		<TextView
		    android:layout_width="match_parent"
		    android:layout_height="40dp"
		    android:text="@string/profile_description_title"
		    android:textSize="18dp"
		    android:textStyle="bold" />

		<EditText
		    android:id="@+id/profile_description"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:gravity="top"
		    android:text="fdgdgdgdf " />

		</LinearLayout>
	</LinearLayout>

	<RelativeLayout
	    android:id="@+id/profile_tab_portrait"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_above="@id/profile_view_bottom_menu"
	    android:layout_alignParentTop="false"
	    android:layout_below="@id/profile_view_top_menu"
	    android:layout_weight="9"
	    android:orientation="vertical"
	    android:visibility="gone" >

	    <LinearLayout
	        android:id="@+id/profile_view_portrait_menu"
	        android:layout_width="fill_parent"
	        android:layout_height="40dp"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentLeft="false"
	        android:layout_weight="1"
	        android:orientation="horizontal" >

			<Button
		    	android:id="@+id/profile_portrait_camera"
		    	android:layout_width="fill_parent"
		    	android:layout_height="fill_parent"
		    	android:textColor="@color/white"
		    	android:text=""
		    	android:drawableTop="@drawable/ic_action_camera"
		    	android:paddingTop="5dp"
		    	android:background="@drawable/bottom_menu_button"
		    	android:layout_weight="1" />

			<Button
			    android:id="@+id/profile_portrait_gallery"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_weight="1"
			    android:background="@drawable/bottom_menu_button"
			    android:drawableTop="@drawable/ico_gallery_portrait"
			    android:text=""
			    android:paddingTop="5dp"
			    android:textColor="@color/white" />

			<Button
			    android:id="@+id/profile_portrait_remove"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_weight="1"
			    android:background="@drawable/bottom_menu_button"
			    android:drawableTop="@drawable/ic_action_discard"
			    android:text=""
			    android:paddingTop="5dp"
			    android:textColor="@color/white" />
		
		</LinearLayout>
		
		<LinearLayout
		    android:id="@+id/profile_view_portrait_portrait"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_above="@id/profile_view_portrait_menu"
		    android:layout_alignParentTop="true"
		    android:layout_marginLeft="20dp"
		    android:layout_marginRight="20dp"
		    android:layout_marginTop="20dp"
		    android:layout_marginBottom="20dp"
		    android:orientation="vertical" >

			<TextView
			    android:layout_width="fill_parent"
			    android:layout_height="40dp"
			    android:text="@string/profile_portrait_title"
			    android:textSize="18dp"
			    android:textStyle="bold" />

			<ImageView
		    	android:id="@+id/profile_portrait_image"
		    	android:layout_width="fill_parent"
		    	android:layout_height="fill_parent" />

		</LinearLayout>

		
	</RelativeLayout>

	<LinearLayout
	    android:id="@+id/profile_tab_tags"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_above="@id/profile_view_bottom_menu"
	    android:layout_alignParentTop="false"
	    android:layout_below="@id/profile_view_top_menu"
	    android:layout_marginBottom="20dp"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:layout_marginTop="20dp"
	    android:layout_weight="9"
	    android:orientation="vertical"
	    android:visibility="gone" >

		<LinearLayout
	    	
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="8"
	    	android:orientation="vertical" >
			<TextView
			    android:layout_width="fill_parent"
			    android:layout_height="40dp"
			    android:textSize="18dp"
			    android:textStyle="bold" 
			    android:text="@string/profile_tags_title"/>
			<ListView
		    	android:id="@+id/profile_tag_list"
		    	android:layout_width="fill_parent"
		    	android:layout_height="fill_parent" />

		</LinearLayout>
	</LinearLayout>
	
	<LinearLayout
	    android:id="@+id/profile_tab_map"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_above="@id/profile_view_bottom_menu"
	    android:layout_alignParentTop="false"
	    android:layout_below="@id/profile_view_top_menu"
	    android:layout_weight="9"
	    android:orientation="vertical"
	    android:visibility="gone" >

		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="20dp"
		    android:layout_marginLeft="20dp"
		    android:layout_marginRight="20dp"
		    android:layout_marginTop="20dp"
		    android:layout_weight="8"
		    android:orientation="vertical" >

			<TextView android:layout_width="fill_parent"
			    	  android:layout_height="40dp" 
			    	  android:textSize="18dp"
			    	  android:textStyle="bold"
			    	  android:text="@string/profile_map_title"
			    	  />
		<RelativeLayout
		   
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:orientation="vertical" >
				

			<org.osmdroid.views.MapView
    			xmlns:android="http://schemas.android.com/apk/res/android"
    			android:id="@+id/mapview"
    			android:layout_width="fill_parent"
    			android:clickable="true"
    			android:layout_height="fill_parent"/>
			<Button
			    android:id="@+id/zoomout"
			    android:layout_width="40dp"
			    android:layout_height="40dp"
			    android:layout_alignParentBottom="true"
			    android:layout_alignParentLeft="true"
			    android:layout_alignParentTop="false"
			    android:layout_marginLeft="40dp"
			    android:text="-" />

			<Button
			    android:id="@+id/zoomin"
			    android:layout_width="40dp"
			    android:layout_height="40dp"
			    android:layout_alignParentBottom="true"
			    android:layout_alignParentLeft="true"
			    android:layout_alignParentTop="false"
			    android:text="+" />
	
		</RelativeLayout>
		

	</LinearLayout>
	

	<LinearLayout
       
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >
        	
		<LinearLayout
		    
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_weight="1" >

			<ToggleButton
			    android:id="@+id/map_edit_location"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_weight="1"
			    android:background="@drawable/bottom_menu_button"
			    android:drawableTop="@drawable/ic_action_edit"
			    android:paddingTop="11dp"
			    android:textColor="@color/white"
			    android:textOff=""
			    android:textOn="" />

			<Button
			    android:id="@+id/map_remove_location"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_weight="1"
			    android:background="@drawable/bottom_menu_button"
			    android:drawableTop="@drawable/ic_action_discard"
			    android:paddingTop="11dp"
			    android:text=""
			    android:textColor="@color/white" />

			<Button
			    android:id="@+id/map_my_location"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_weight="1"
			    android:background="@drawable/bottom_menu_button"
			    android:drawableTop="@drawable/ic_action_place"
			    android:paddingTop="11dp"
			    android:text=""
			    android:textColor="@color/white" />

			<Button
			    android:id="@+id/map_gps_location"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_weight="1"
			    android:background="@drawable/bottom_menu_button"
			    android:drawableTop="@drawable/ic_action_location_found"
			    android:paddingTop="11dp"
			    android:text=""
			    android:textColor="@color/white" />

		</LinearLayout>
	</LinearLayout>
	</LinearLayout>    

	

</RelativeLayout>
