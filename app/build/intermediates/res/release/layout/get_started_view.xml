<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#EAE9E3">


<RelativeLayout
    android:id="@+id/get_started_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    android:weightSum="10" >

	<ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/bg" />

    <LinearLayout
        android:id="@+id/get_started1_top_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1" >

			<TextView
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_gravity="bottom"
			    android:text="@string/get_started_in_3_steps"
			    android:textSize="18dp"
			    android:textStyle="bold" />

	</LinearLayout>

    <LinearLayout

	    android:id="@+id/get_started1_bottom_menu"
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:layout_alignParentBottom="true"

	    android:layout_weight="1" >

		<LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

			<Button
			    android:id="@+id/button_get_started_1_help"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_gravity="bottom"
			    android:background="@drawable/bottom_menu_button"
			    android:drawableTop="@drawable/ic_action_help"
			    android:paddingTop="11dp"
			    android:textColor="@color/white" />

		</LinearLayout>
		<LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

			<Button
			    android:id="@+id/button_get_started_1_next"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_gravity="bottom"
			    android:textColor="@color/white"
			    android:background="@drawable/bottom_menu_button"
			    android:paddingTop="11dp"
			    android:drawableTop="@drawable/ic_action_forward"
			    android:text="" />

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:layout_marginTop="20dp"
	    android:layout_weight="1"

        android:layout_above="@id/get_started1_bottom_menu"
        android:layout_below="@id/get_started1_top_menu"
	    android:orientation="vertical" >

		<LinearLayout

		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:orientation="vertical" >

			<TextView
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_gravity="bottom"
			    android:layout_marginRight="20dp"
			    android:text="@string/gets_started_1"
			    android:textSize="@dimen/padding_large"
			    android:textStyle="bold" />

			<Spinner
			    android:id="@+id/get_started_language"
			    android:layout_width="fill_parent"
			    android:layout_height="50dp" />

		</LinearLayout>

		<LinearLayout

		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:orientation="horizontal"
            android:visibility="gone">

			<RadioGroup
			    android:id="@+id/distance_unit"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_gravity="bottom"
			    android:orientation="horizontal" >

			<RadioButton
			    android:id="@+id/distance_unit_km"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:text="km" />

			<RadioButton
			    android:id="@+id/distance_unit_mile"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:text="miles" />

			</RadioGroup>
		</LinearLayout>


	</LinearLayout>



</RelativeLayout>

    <RelativeLayout

        android:id="@+id/get_started_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:visibility="gone"
        android:weightSum="10" >
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/bg" />

        <LinearLayout
            android:id="@+id/get_started2_top_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="@string/get_started_in_3_steps"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout

            android:id="@+id/get_started2_bottom_menu"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="1" >

            <LinearLayout

                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/button_get_started_2_help"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="bottom"
                    android:background="@drawable/bottom_menu_button"
                    android:drawableTop="@drawable/ic_action_help"
                    android:paddingTop="11dp"
                    android:textColor="@color/white" />

            </LinearLayout>
            <LinearLayout

                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/button_get_started_2_next"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="bottom"
                    android:paddingTop="11dp"
                    android:background="@drawable/bottom_menu_button"
                    android:drawableTop="@drawable/ic_action_forward"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:layout_above="@id/get_started2_bottom_menu"
            android:layout_below="@id/get_started2_top_menu"
            android:orientation="vertical" >

            <LinearLayout

                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="@string/gets_started_2"
                    android:textSize="@dimen/padding_large"
                    android:textStyle="bold" />

                <Spinner
                    android:layout_width="fill_parent"
                    android:id="@+id/get_started_deployment"
                    android:layout_height="50dp"
                    />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="@string/or"
                    android:textSize="@dimen/padding_large"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/get_started_deployment_2"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:hint="@string/domain_of_own_installation"
                    android:inputType="textUri" />

            </LinearLayout>


        </LinearLayout>



    </RelativeLayout>


    <RelativeLayout

    android:id="@+id/get_started_3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:visibility="gone"
    android:weightSum="10" >
	<ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/bg" />

    <LinearLayout
        android:id="@+id/get_started3_top_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1" >

			<TextView
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_gravity="bottom"
			    android:text="@string/get_started_in_3_steps"
			    android:textSize="18dp"
			    android:textStyle="bold" />

	</LinearLayout>

    <LinearLayout

	    android:id="@+id/get_started3_bottom_menu"
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:layout_alignParentBottom="true"
	    android:layout_weight="1" >

		<LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

			<Button
			    android:id="@+id/button_get_started_3_help"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_gravity="bottom"
			    android:background="@drawable/bottom_menu_button"
			    android:drawableTop="@drawable/ic_action_help"
			    android:paddingTop="11dp"
			    android:textColor="@color/white" />

		</LinearLayout>

		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:background="@drawable/bottom_menu_button_default" >

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_above="@id/get_started3_bottom_menu"
	    android:layout_below="@id/get_started3_top_menu"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:layout_marginTop="20dp"
	    android:layout_weight="1"
	    android:orientation="vertical" >
	    
		<LinearLayout
		    
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:orientation="vertical" >

			<TextView
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_gravity="bottom"
			    android:text="@string/gets_started_3"
			    android:textSize="@dimen/padding_large"
			    android:textStyle="bold" />

				<Button
				    android:id="@+id/button_get_started_3_register"
				    android:layout_width="fill_parent"
				    android:layout_height="60dp"
				    android:layout_marginBottom="10dp"
				    android:layout_marginTop="10dp"
				    android:background="@drawable/bottom_menu_button"
				    android:text="@string/get_started_register"
				    android:textColor="@color/black" />

				<Button
				    android:id="@+id/button_get_started_3_login"
				    android:layout_width="fill_parent"
				    android:layout_height="60dp"
				    android:layout_marginBottom="10dp"
				    android:layout_marginTop="10dp"
				    android:background="@drawable/bottom_menu_button"
				    android:text="@string/get_started_login"
				    android:textColor="@color/black" />

		</LinearLayout>
		

	</LinearLayout>

	
</RelativeLayout>
